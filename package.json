{
  "name": "habit-tracker",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.3.6",
  "scripts": {
    "lint": "bun run -r lint",
    "format": "bun run prettier --write .",
    "format:check": "bun run prettier --check .",
    "typecheck": "bun run -r typecheck",
    "clean": "rm -rf **/dist **/.turbo **/.next **/node_modules",
    "dev": "echo \"Step 2 will wire dev for web+api\"",
    "build": "bun run -r build"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3"
  }
}
